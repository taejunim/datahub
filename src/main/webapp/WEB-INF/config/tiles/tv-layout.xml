<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
		"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="tv-layout" template="/WEB-INF/view/tilesLayout/tv/layout.jsp">
		<put-attribute name="header"    value="/WEB-INF/view/tilesLayout/tv/header.jsp" />
		<put-attribute name="main-sidebar"    value="/WEB-INF/view/tilesLayout/tv/main-sidebar.jsp" />
		<put-attribute name="footer"    value="/WEB-INF/view/tilesLayout/tv/footer.jsp" />
	</definition>

	<definition name="tv/*" extends="tv-layout">
		<put-attribute name="content"   value="/WEB-INF/view/tv/{1}.jsp" />
	</definition>
	<definition name="tv/*/*" extends="tv-layout">
		<put-attribute name="content"   value="/WEB-INF/view/tv/{1}/{2}.jsp" />
	</definition>
	<definition name="tv/*/*/*" extends="tv-layout">
		<put-attribute name="content"   value="/WEB-INF/view/tv/{1}/{2}/{3}.jsp" />
	</definition>
	<definition name="tv/*/*/*/*" extends="tv-layout">
		<put-attribute name="content"   value="/WEB-INF/view/tv/{1}/{2}/{3}/{4}.jsp" />
	</definition>
</tiles-definitions>